extends layout

block content
	br
	if user
		h2#title(data-routespassenger=routes_passenger, data-routesdriver=routes_driver) Profile of #{user.firstname} #{user.lastname}
		if routes_driver
			div#driver
				h3 Your added routes:		
				each route in routes_driver
					table(style='width:80%; border:1px solid black' align="center")
						tr
							td(colspan="2")
								h3 <b>#{route.depart_city} - Schiphol Airport, Amsterdam</b>
							td(colspan="2")
								h3#date Date: #{route.date}			
						tr
							td(style='width:20%') Pickup points
							td(style='width:40%') #{route.depart_city}
								img.startpoint-icon(src='/images/start_icon.png')
							td(style='width:20%') #{route.time}
							td(style='width:20%') #{route.price_from_depart} €
						if route.pickup_point1
							tr
								td 
								td#pickups #{route.pickup_point1}
									img.pickup-icon(src='/images/pickup_icon.png')
								td #{route.pickup_point1_time}
								td #{route.price_from_p1} €
						if route.pickup_point2
							tr
								td 
								td#pickups #{route.pickup_point2}
									img.pickup-icon(src='/images/pickup_icon.png')
								td #{route.pickup_point2_time}
								td #{route.price_from_p2} €
						if route.pickup_point3
							tr
								td
								td#pickups #{route.pickup_point3}
									img.pickup-icon(src='/images/pickup_icon.png')
								td #{route.pickup_point3_time}
								td #{route.price_from_p3} €
						tr
							td Drop-off point
							td Schiphol Airport, Amsterdam
								img.startpoint-icon(src='/images/end_icon.png')
							td #{route.drop_off_time}
						tr.separator
						tr
							td(align:'center' colspan="2")#driver_details <b>Car's details</b>
							td(colspan="2")#car_details <b>Driver's details</b>	
						tr.separator
						tr
							td(colspan="2") <b>Type:</b> #{route.car_type}
							td(colspan="1") <b>Username:</b> 
							td(colspan="1") #{route.driver_username}
						tr
							td(colspan="2") <b>Available seats:</b> #{route.available_seats}
							td(colspan="1") <b> Points:</b> 	
							td(colspan="1") 4,7 / 5	
						tr.separator
						tr
							td(colspan="4" align="center") 
								button#book-btn(data-route=route) BOOK
						br
						br
		if routes_passenger
			div#passenger
				h3 You booked these routes:
				each route in routes_passenger
					table(style='width:80%; border:1px solid black' align="center")
						tr
							td(colspan="2")
								h3 <b>#{route.depart_city} - Schiphol Airport, Amsterdam</b>
							td(colspan="2")
								h3#date Date: #{route.date}			
						tr
							td(style='width:20%') Pickup points
							td(style='width:40%') #{route.depart_city}
								img.startpoint-icon(src='/images/start_icon.png')
							td(style='width:20%') #{route.time}
							td(style='width:20%') #{route.price_from_depart} €
						if route.pickup_point1
							tr
								td 
								td#pickups #{route.pickup_point1}
									img.pickup-icon(src='/images/pickup_icon.png')
								td #{route.pickup_point1_time}
								td #{route.price_from_p1} €
						if route.pickup_point2
							tr
								td 
								td#pickups #{route.pickup_point2}
									img.pickup-icon(src='/images/pickup_icon.png')
								td #{route.pickup_point2_time}
								td #{route.price_from_p2} €
						if route.pickup_point3
							tr
								td
								td#pickups #{route.pickup_point3}
									img.pickup-icon(src='/images/pickup_icon.png')
								td #{route.pickup_point3_time}
								td #{route.price_from_p3} €
						tr
							td Drop-off point
							td Schiphol Airport, Amsterdam
								img.startpoint-icon(src='/images/end_icon.png')
							td #{route.drop_off_time}
						tr.separator
						tr
							td(align:'center' colspan="2")#driver_details <b>Car's details</b>
							td(colspan="2")#car_details <b>Driver's details</b>	
						tr.separator
						tr
							td(colspan="2") <b>Type:</b> #{route.car_type}
							td(colspan="1") <b>Username:</b> 
							td(colspan="1") #{route.driver_username}
						tr
							td(colspan="2") <b>Available seats:</b> #{route.available_seats}
							td(colspan="1") <b> Points:</b> 	
							td(colspan="1") 4,7 / 5	
						tr.separator
						tr
							td(colspan="4" align="center") 
								button#book-btn(data-route=route) BOOK
						br
						br
		if message_noroutes
			h3= message_noroutes
			if (user.status === 'passenger')
				a(href='/search')
					button Click here to search a route
			else 
				a(href='/addRoute')
					button Click here to add a route
	if message
		h3#title= message





